#include <iostream>
#include <fstream>
using namespace std;

int main() {

    ifstream fin("bac.txt");
    int maxLen = 0, currLen = 0, maxCount = 0;
    int prev, curr;
    fin >> prev;
    while (fin >> curr) {
        if (prev % 2 == curr % 2) {
            currLen++;
        } else {
            currLen = 1;
        }
        if (currLen > maxLen) {
            maxLen = currLen;
            maxCount = 1;
        } else if (currLen == maxLen) {
            maxCount++;
        }
        prev = curr;
    }
    cout << maxCount << " " << maxLen << endl;
    return 0;
}
